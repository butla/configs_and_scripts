#!/bin/bash
BACKUP_LOCATION="/run/media/butla/Seagate Backup Plus Drive/backup_bl"

sudo borg create --stats --progress "${BACKUP_LOCATION}::$(date --iso-8601=seconds --utc)-bl" \
    /bin \
    /boot \
    /etc \
    /home \
    /initrd.img \
    /initrd.img.old \
    /lib \
    /lib64 \
    /opt \
    /root \
    /sbin \
    /snap \
    /srv \
    /usr \
    /var \
    /vmlinuz \
    /vmlinuz.old
